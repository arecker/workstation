---
- "connection": "local"
  "hosts": "localhost"
  "tasks":
  - "changed_when": "generate_dotfiles.stdout == \"changed\""
    "command": "{{ playbook_dir }}/scripts/generate-dotfiles"
    "register": "generate_dotfiles"
  - "ansible.builtin.copy":
      "dest": "~/.ssh/id_rsa"
      "mode": "0400"
      "src": "{{ playbook_dir }}/files/id_rsa"
  - "ansible.builtin.copy":
      "dest": "~/.ssh/id_rsa.pub"
      "mode": "0644"
      "src": "{{ playbook_dir }}/files/id_rsa.pub"
...


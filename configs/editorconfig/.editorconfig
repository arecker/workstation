root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_size = 4
indent_style = space

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space

[Makefile]
indent_style = tab
indent_size = 8

[*.{jsonnet,libsonnet}]
indent_style = space
indent_size = 2

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

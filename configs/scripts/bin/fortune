#!/usr/bin/env python
import json
import pathlib
import random
import textwrap


def main():
    target = pathlib.Path('~/.quotes.json').expanduser()
    with target.open('r') as f:
        quotes = json.load(f)
    author, text = random.choice(quotes)
    text = textwrap.fill(text, width=60)
    print('"{}"\n-- {}'.format(text, author))


if __name__ == '__main__':
    main()
